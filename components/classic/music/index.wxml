<view class="container" hidden="{{hidden}}">
    <image class="classic-img {{playStatus?'rotation':''}}" src="{{img}}" />
    <image class="player-img" bind:tap="togglePlayStatus" src="{{playStatus?pauseSrc:playSrc}}" />
    <image class="classic-tag" src="images/music@tag.png" />
    <text class="classic-content">{{ content }}</text>
</view>